<div class="text-center">
  <h1>レビュー投稿</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@review) do |f| %>
    
     <%= render 'layouts/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :title_id, 'title' %>
        <%= f.collection_select :title_id, Title.all, :id, :name %>
        
        <%= link_to "タイトル追加", new_title_path, class:"btn btn-primary" %>
      </div>

      <div class="form-group">
        <%= f.label :platform_id, '機種' %>
        <%= f.collection_select :platform_id, Platform.all, :id, :name %>
      </div>



      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :point, 'ポイント' %>
        <%= f.select :point, {"★☆☆☆☆":1, "★★☆☆☆":2, "★★★☆☆":3,"★★★★☆":4, "★★★★★":5} %>
      </div>



      <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>